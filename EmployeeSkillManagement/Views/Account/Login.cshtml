@model EmployeeSkillManagement.Models.ViewModels.LoginViewModel
<div class="login-card">
    <div class="left">
        <img src="@Url.Content("~/Content/Images/capgemini-logo.png")" alt="capgemini">
        <div class="logo-text">
            Get the <span>future</span> you want
        </div>
    </div>
    <div class="right">

    @* <h4 class="text-uppercase text-center">Admin Login</h4> *@
    <form asp-action="Login" asp-controller="Account" method="post">
        <input type="hidden" name="returnUrl" value="@Context.Request.Query["ReturnUrl"]" />
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
            <small><span asp-validation-for="Username" class="text-danger"></span></small>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" />
            <small><span asp-validation-for="Password" class="text-danger"></span></small>
        </div>
        <button type="submit" class="btn btn-primary w-100">Login</button>
    </form>
    </div>

</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
