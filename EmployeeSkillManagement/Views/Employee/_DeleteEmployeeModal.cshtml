@model Employee
<div class="modal fade" id="delete-modal-@Model.Id" tabindex="-1" aria-labelledby="delete-modal-@Model.Id-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-uppercase" id="delete-modal-@Model.Id-label">Delete Employee</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this employee data?
      </div>
      <div class="modal-footer">
        <form asp-controller="Employee" asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <button type="button" class="btn bg-light" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>